@model ELibrary.Web.Areas.Admin.Models.ResourceViewModels.ResourceAddViewModel

@{
    ViewData["Title"] = "Книги";
}

<div class="container my-5">
    <h2>Книги</h2>
    <div class="my-2">
        <a asp-action="Add" type="button" class="btn btn-primary">Добави книга</a>
    </div>
    <div class="row g-4">
        @for (int i = 0; i < 13; i++)
        {
            <div class="col-lg-3 col-md-4 col-12">
                <div class="card book-card shadow-sm">
                    <img src="https://picsum.photos/200" class="card-img-top" alt="Book Cover">
                    <div class="card-body">
                        <h5 class="card-title">Title</h5>
                        <p class="card-text">Author: John Doe</p>
                    </div>
                    <div class="card-footer text-center">
                        <button class="btn btn-primary btn-sm">Details</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


